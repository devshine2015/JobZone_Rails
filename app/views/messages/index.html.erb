<p id="notice"><%= notice %></p>

<h1>Messages</h1>

<table>
  <thead>
    <tr>
      <th>Message body</th>
      <th>Message type</th>
      <th>Conversation</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.message_body %></td>
        <td><%= message.message_type %></td>
        <td><%= message.conversation %></td>
        <td><%= message.user %></td>
        <td><%= link_to 'Show', job_conversation_message_path(message.conversation.job, message.conversation, message) %></td>
        <td><%= link_to 'Edit', edit_job_conversation_message_path(message.conversation.job, message.conversation, message) %></td>
        <td><%= link_to 'Destroy', job_conversation_message_path(message.conversation.job, message.conversation, message), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

